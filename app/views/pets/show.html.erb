
<h2>Name: <%= "#{@pet.name}" %></h2>
<%= image_tag "#{@pet.image}", :size => '200x200' %><br>
Description: <%= @pet.description %><br>
Approx Age: <%= @pet.approximate_age %><br>
Sex: <%= @pet.sex %><br>
Adoption Status: <%= @pet.adoptable? %><br>

<% if current_admin? %>
  <a href="/pets/<%= @pet.id %>/edit">Update Pet</a>
  <%= button_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>
<% end %>
