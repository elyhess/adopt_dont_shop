<h1>Shelters</h1>
<%= link_to 'New Shelter', '/shelters/new' %>
<% @shelters.each do |shelter| %>
  <section id="shelter-<%=shelter.id%>">
    <h2><%= link_to "#{shelter.name}", admin_shelter_path(shelter.id) %></h2>
    <%= link_to "Edit Shelter", shelter_path(shelter.id), method: :get %>
    <%= link_to "Delete Shelter", shelter_path(shelter.id), method: :delete %>
  </section>
<% end %>

<h1>Shelters with Pending Applications</h1>
<% @pending_shelters.each do |shelter| %>
  <section id="shelter-pending-<%=shelter.id%>">
    <h2><%= link_to "#{shelter.name}", admin_shelter_path(shelter.id) %></h2>
  </section>
<% end %>