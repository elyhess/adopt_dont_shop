<% if @application.in_progress? %>
  <%= render "description", in_progress: true %>
<% elsif @application.pending? %>
  <%= render "description"  %>
<% elsif @application.accepted? %>
  <%= render "description"  %>
<% elsif @application.rejected? %>
  <%= render "description"  %>
<% end %>

<h3>Pets applied for:</h3>
<section id="pets-applied-for-<%= @application.id  %>"> 
  <% @application.pets.each do |pet| %>
    <%= link_to "#{pet.name}", pet_path(pet), id: "pet-id-#{pet.id}" %>
  <% end %> 
</section>



